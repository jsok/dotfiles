[alias]
  st = status
  di = diff
  out = diff --cached
  in = fetch --dry-run
  ci = commit
  br = branch
  co = checkout
  rm = remote -v
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  unstage = reset HEAD
[core]
  excludesfile = ~/.gitignore
[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto
[branch]
  autosetupmerge = true
[push]
  default = tracking

# Requires git ~= 1.8 or newer
[include]
  path = .gitconfig.local
