# Aliases

alias tmux="tmux -2"
alias g="git"
alias l="ls -1"
alias rm="rm"
alias mv="mv -i"
alias cp="cp -i"
alias ll="ls -l"
alias la="ls -A"
alias lll="ls -lhA"
alias vi="vim"
alias cls="clear"
alias cdd="cd .."
alias cdroot='cd $(git root)'
alias usage="du -h -d 1"
alias tf="terraform"

alias k="kubectl"
alias kustomize="kubectl kustomize"

alias lockscreen="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"
alias hogs="top -o cpu -l2 -n5 -stats pid,command,cpu"

# Common typos
alias ci="vim"
alias grpe="grep"
alias got="git"
alias gti="git"
alias gis="git status"
alias gid="git diff"
alias gic="git commit -m"
alias unquarantine="xattr -d -r com.apple.quarantine"
